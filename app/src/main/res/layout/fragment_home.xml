<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--_________________________grown_________________________-->

            <fragment
                android:id="@+id/fragment1"
                android:name="baby.com.project2.fragment.GrownHomeFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_grown_home" />

            <!--_________________________develor_________________________-->

            <fragment
                android:id="@+id/fragment2"
                android:name="baby.com.project2.fragment.DevelorHomeFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_develor_home" />

            <!--_________________________vaccine_________________________-->
            <fragment
                android:id="@+id/fragment3"
                android:name="baby.com.project2.fragment.VaccineHomeFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_vaccine_home" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>