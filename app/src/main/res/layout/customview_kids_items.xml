<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_card_kids_items"
    android:layout_height="@dimen/height_card_kids_items">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_list_child"
        android:layout_width="@dimen/width_card_kids_items"
        android:layout_height="@dimen/height_card_kids_items"
        android:layout_margin="5dp"
        app:cardCornerRadius="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="10dp"-->
                <!--android:background="@color/colorAccent">-->

                <!--</View>-->

                <ImageView
                    android:id="@+id/image_view_kids"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textview_nickname_kids"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_medium"
                    android:gravity="center"
                    android:text="ชื่อเล่น"
                    android:textSize="@dimen/text_nickname" />

                <TextView
                    android:id="@+id/textview_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_medium"
                    android:gravity="center"
                    android:text=""
                    android:textSize="@dimen/text_brithday_kids_items" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageview_edit_child"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_edit" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>